<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <include
        android:id="@+id/avatar_nickname_title_bar"
        layout="@layout/title_bar" />

    <ImageView
        android:id="@+id/iv_sign_up_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:scaleType="center"
        android:src="@mipmap/avatar"
        android:background="@color/et_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_nickname_title_bar" />

    <TextView
        android:id="@+id/tv_sign_up_avatar_instructions"
        style="@style/text_16_DE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="@string/nick_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sign_up_avatar" />

    <EditText
        android:id="@+id/et_sign_up_nickname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/layout_corner_edit_gray_bg_gray"
        android:maxLines="1"
        android:paddingBottom="14dp"
        android:paddingLeft="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_avatar_instructions" />

    <Button
        android:id="@+id/bt_sign_up_finish"
        style="@style/text_16_FF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_corner_blue_bg_blue"
        android:text="@string/finish"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_up_nickname" />

</android.support.constraint.ConstraintLayout>
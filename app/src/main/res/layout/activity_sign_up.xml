<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <include
        android:id="@+id/sign_up_title"
        layout="@layout/title_bar" />

    <TextView
        android:id="@+id/tv_sign_up_instructions"
        style="@style/text_16_DE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:text="@string/email_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_title" />

    <EditText
        android:id="@+id/et_sign_up_input_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/layout_corner_edit_gray_bg_gray"
        android:maxLines="1"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_instructions" />

    <Button
        android:id="@+id/bt_sign_up_send_code"
        style="@style/text_16_FF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/layout_select_sign_up_bt"
        android:text="@string/next"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_up_input_email" />

</android.support.constraint.ConstraintLayout>